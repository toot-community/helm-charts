{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "bumpVersion": "patch"
    },
    {
      "matchUpdateTypes": ["major"],
      "bumpVersion": "minor"
    }
  ]
}
